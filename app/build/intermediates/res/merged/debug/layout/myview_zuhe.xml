<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myandroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <lmc.lonely.view.ZHView
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myandroid:desc_off="自动更新没有开启"
        myandroid:desc_on="自动更新已经开启"
        myandroid:title="自动更新设置" >
    </lmc.lonely.view.ZHView>

    <lmc.lonely.view.ZHView
        android:id="@+id/setting_showaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myandroid:desc_off="归属地显示没有开启"
        myandroid:desc_on="归属地显示已经开启"
        myandroid:title="归属地显示设置" >
    </lmc.lonely.view.ZHView>

    
</LinearLayout>